{
    "manifest_version": 2,
    "name"        : "Just Food You clipper",
    "description" : "Help grab recipe to www.justfoodyou.com",
    "version"     : "0.1.3",
    "icons": { 
        "16"  : "icon_16.jpg",
        "32"  : "icon_32.png",
        "64"  : "icon_64.png",
        "128" : "icon_128.png" 
    },

    "permissions": [
        "identity",
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],  
    "content_security_policy": "script-src 'self'; object-src 'self'; ",
    "externally_connectable": {
        "ids": [
          "iehpofechmihgfphjmggfieaoandaena"
        ],
        "matches": [
            "*://www.justfoodyou.com/*"
        ],
        "accepts_tls_channel_id": true
    },

    "web_accessible_resources": [
        "icon_16.jpg",        
        "icon_32.png",        
        "NoImage.jpg",        
        "images/*",
        "templates.html"
    ],
    "browser_action": {
        "default_icon": "icon_32.png"
    },
    "content_scripts": [
        {
            "matches" : ["http://*/*", "https://*/*"],
            "js" : [
                "jquery.min.js",
                "franc.js",
                "underscore-min.js",
                "backbone-min.js",
                "backbone.typeahead.min.js",
                "backbone.labelselector.js",
                "parse-1.4.2.min.js",
                "underi18n.js",
                "content.js"
            ],
            "run_at"     : "document_end",
            "all_frames" : true
        }
    ],
    "background": {
        "scripts": [
            "jquery.min.js",
            "franc.js",
            "underscore-min.js",
            "backbone-min.js",
            "parse-1.4.2.min.js",
            "background.js"
        ]
    }
}